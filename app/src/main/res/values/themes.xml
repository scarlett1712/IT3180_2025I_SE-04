<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--
        Đây là style mà AndroidManifest.xml đang tìm kiếm,
        nó định nghĩa giao diện chung cho toàn bộ ứng dụng của bạn.
    -->
    <style name="Theme.ENoti" parent="Theme.Material3.DayNight.NoActionBar">
        <!--
            Tùy chỉnh theme của bạn tại đây.
            Ví dụ: Thay đổi màu sắc chính của ứng dụng.
            Bạn cần định nghĩa các màu này trong file `res/values/colors.xml`.
        -->
        <!-- <item name="colorPrimary">@color/purple_500</item> -->
    </style>

    <!--
        ✅ ĐÃ THÊM CÁC STYLE CÒN THIẾU CHO fragment_settings.xml
        Đây chỉ là các định nghĩa cơ bản. Bạn có thể tùy chỉnh các thuộc tính
        như kích thước chữ, màu sắc, lề, v.v. để phù hợp với thiết kế của bạn.
    -->

    <!-- Style cho mỗi mục trong cài đặt (ví dụ: một hàng chứa icon và text) -->
    <style name="SettingItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">16dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <!-- Style cho icon trong mỗi mục cài đặt -->
    <style name="SettingIcon">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>

    <!-- Style cho văn bản trong mỗi mục cài đặt -->
    <style name="SettingText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

</resources>
