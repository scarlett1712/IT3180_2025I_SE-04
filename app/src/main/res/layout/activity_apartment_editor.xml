<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Thông tin phòng" android:textSize="20sp" android:textStyle="bold" android:layout_marginBottom="20dp"/>

    <EditText android:id="@+id/edtRoomNumber" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="Số phòng (VD: 101)" android:inputType="text"/>
    <EditText android:id="@+id/edtFloor" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="Tầng (VD: 1)" android:inputType="number"/>
    <EditText android:id="@+id/edtArea" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="Diện tích (m2)" android:inputType="numberDecimal"/>

    <Button android:id="@+id/btnSave" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Lưu thông tin" android:layout_marginTop="20dp"/>
</LinearLayout>