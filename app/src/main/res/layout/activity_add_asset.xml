<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="#FFFFFF">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thêm thiết bị mới"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/purple_primary"
        android:layout_marginBottom="24dp"/>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:hint="Tên thiết bị (VD: Thang máy)">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtAssetName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:hint="Vị trí lắp đặt (VD: Tầng 1)">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtAssetLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:hint="Ngày mua (YYYY-MM-DD)">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtPurchaseDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2024-01-01"/>
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btnAddAsset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lưu thiết bị"
        android:backgroundTint="@color/purple_primary"
        android:textSize="16sp"
        android:padding="12dp"/>

</LinearLayout>