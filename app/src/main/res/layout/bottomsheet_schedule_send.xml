<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/bg_box"
    android:clipToPadding="false">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thiết lập thời gian gửi"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thời gian gửi:"
            android:textSize="16sp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/txtSendTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="hh:mm:ss"
            android:textStyle="bold"
            android:textColor="@android:color/holo_blue_dark"
            android:padding="6dp" />
    </LinearLayout>

    <!-- Checkbox nhắc nhở -->
    <CheckBox
        android:id="@+id/checkRemind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nhắc nhở tôi trước khi gửi?"
        android:textSize="16sp"
        android:layout_marginBottom="8dp" />

    <!-- Nếu chọn true -->
    <LinearLayout
        android:id="@+id/layoutRemindBefore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nhắc tôi trước:"
            android:textSize="16sp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/txtRemindTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="hh:mm:ss"
            android:textStyle="bold"
            android:textColor="@android:color/holo_orange_dark"
            android:padding="6dp" />
    </LinearLayout>

    <Button
        android:id="@+id/btnConfirmSend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Xác nhận gửi"
        android:textAllCaps="false"
        android:layout_marginTop="16dp" />
</LinearLayout>
