<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9FAFB">

    <!-- Header: Avatar + Tên -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/imgUserAvatar"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/ic_person"
            android:background="@drawable/avatar_circle_bg"
            android:scaleType="centerCrop"
            android:contentDescription="@string/profile_picture"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="16dp">

            <TextView
                android:id="@+id/txtUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lê Quốc An"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#212121"/>

            <TextView
                android:id="@+id/txtUserApartment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Căn hộ A2-1203"
                android:textSize="14sp"
                android:textColor="#757575"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Danh sách các tùy chọn -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingHorizontal="12dp"
        app:layout_constraintTop_toBottomOf="@id/headerLayout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingVertical="8dp">

            <!-- Cài đặt thông báo -->
            <LinearLayout
                style="@style/SettingItem"
                android:id="@+id/btnNotification">
                <ImageView
                    android:src="@drawable/ic_notification_dark"
                    style="@style/SettingIcon"/>
                <TextView
                    android:text="Thông báo"
                    style="@style/SettingText"/>
            </LinearLayout>

            <!-- Cài đặt ngôn ngữ -->
            <LinearLayout
                style="@style/SettingItem"
                android:id="@+id/btnLanguage">
                <ImageView
                    android:src="@drawable/ic_language"
                    style="@style/SettingIcon"/>
                <TextView
                    android:text="Ngôn ngữ"
                    style="@style/SettingText"/>
            </LinearLayout>

            <!-- Chế độ tối -->
            <LinearLayout
                style="@style/SettingItem"
                android:id="@+id/btnDarkMode">
                <ImageView
                    android:src="@drawable/ic_dark_mode"
                    style="@style/SettingIcon"/>
                <TextView
                    android:text="Chế độ tối"
                    style="@style/SettingText"/>
            </LinearLayout>

            <!-- Quyền riêng tư -->
            <LinearLayout
                style="@style/SettingItem"
                android:id="@+id/btnPrivacy">
                <ImageView
                    android:src="@drawable/ic_privacy"
                    style="@style/SettingIcon"/>
                <TextView
                    android:text="Quyền riêng tư"
                    style="@style/SettingText"/>
            </LinearLayout>

            <!-- Hỗ trợ -->
            <LinearLayout
                style="@style/SettingItem"
                android:id="@+id/btnSupport">
                <ImageView
                    android:src="@drawable/ic_support"
                    style="@style/SettingIcon"/>
                <TextView
                    android:text="@string/Contact"
                    style="@style/SettingText"/>
            </LinearLayout>

            <!-- Đăng xuất -->
            <LinearLayout
                style="@style/SettingItem"
                android:id="@+id/btnLogout">
                <ImageView
                    android:src="@drawable/ic_logout"
                    style="@style/SettingIcon"/>
                <TextView
                    android:text="Đăng xuất"
                    style="@style/SettingText"
                    android:textColor="#E53935"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
