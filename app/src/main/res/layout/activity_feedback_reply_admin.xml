<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- Tiêu đề -->
    <TextView
        android:id="@+id/txtFeedbackReplyTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Trả lời phản hồi"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginBottom="16dp" />

    <!-- Nội dung phản hồi gốc -->
    <TextView
        android:id="@+id/txtOriginalFeedback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="(Nội dung phản hồi gốc...)"
        android:textColor="@color/dark_gray"
        android:layout_marginBottom="16dp" />

    <!-- Ô nhập nội dung trả lời -->
    <EditText
        android:id="@+id/edtReplyContent"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:gravity="top|start"
        android:hint="Nhập nội dung phản hồi..."
        android:background="@drawable/bg_box"
        android:padding="12dp"
        android:textSize="16sp"
        android:layout_marginBottom="20dp"/>

    <!-- Nút gửi -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSendReply"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gửi phản hồi"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:backgroundTint="?attr/colorPrimary" />
</LinearLayout>
