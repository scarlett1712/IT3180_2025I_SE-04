<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F7FA"> <com.google.android.material.appbar.AppBarLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    app:elevation="0dp">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:title="Chi tiết hóa đơn"
        app:titleTextColor="@color/white"
        app:navigationIcon="@drawable/ic_arrow_back" />
</com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:paddingBottom="80dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/viewHeader"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:background="@drawable/bg_header_curved"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="-60dp"/>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/white"
                app:layout_constraintTop_toBottomOf="@+id/viewHeader"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <ImageView
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:src="@drawable/ic_bill"
                        app:tint="?attr/colorPrimary"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="16dp"/>

                    <TextView
                        android:id="@+id/txtReceiptTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:text="Hóa đơn Tiền điện T10"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/txtPrice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:text="500,000 đ"
                        android:textColor="?attr/colorPrimary"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/txtReceiptDeadline"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        tools:text="Hạn: 30/10/2025"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#D32F2F"
                        android:background="#FFEBEE"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="4dp"
                        android:layout_marginBottom="24dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#E0E0E0"
                        android:layout_marginBottom="16dp"
                        android:layerType="software"
                        android:backgroundTint="#000000"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">
                        <TextView
                            android:text="Người gửi:"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="#757575"/>
                        <TextView
                            android:id="@+id/txtSender"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="Ban Quản Lý"
                            android:textStyle="bold"
                            android:textColor="@color/black"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="20dp">
                        <TextView
                            android:text="Nội dung:"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.3"
                            android:textColor="#757575"/>
                        <TextView
                            android:id="@+id/txtDetailContent"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.7"
                            android:gravity="end"
                            tools:text="Thu phí dịch vụ tháng 10"
                            android:textColor="@color/black"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/invoiceDetail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/bg_input_rounded_border"
                        android:padding="16dp">

                        <TextView
                            android:id="@+id/txtinvoiceDetailTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Chi tiết giao dịch"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:textColor="@color/black"
                            android:layout_marginBottom="12dp" />

                        <include layout="@layout/item_detail_row_small" android:id="@+id/rowOrderCode"/>
                        <include layout="@layout/item_detail_row_small" android:id="@+id/rowPayDate"/>
                        <include layout="@layout/item_detail_row_small" android:id="@+id/rowAmount"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#EEEEEE"
                            android:layout_marginVertical="8dp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Bằng chữ:"
                            android:textSize="12sp"
                            android:textColor="#757575"/>
                        <TextView
                            android:id="@+id/txtAmountInText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            tools:text="Năm trăm nghìn đồng"
                            android:textStyle="italic"
                            android:textColor="@color/black"
                            android:layout_marginBottom="8dp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Ghi chú:"
                            android:textSize="12sp"
                            android:textColor="#757575"/>
                        <TextView
                            android:id="@+id/txtDetail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            tools:text="CK 24/7"
                            android:textColor="@color/black"/>

                        <TextView android:id="@+id/txtOrderCode" android:visibility="gone" android:layout_width="0dp" android:layout_height="0dp"/>
                        <TextView android:id="@+id/txtPayDate" android:visibility="gone" android:layout_width="0dp" android:layout_height="0dp"/>
                        <TextView android:id="@+id/txtAmount" android:visibility="gone" android:layout_width="0dp" android:layout_height="0dp"/>

                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonPay"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="@string/pay_button"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:cornerRadius="12dp"
        app:backgroundTint="?attr/colorPrimary"
        android:layout_gravity="bottom"
        android:layout_margin="16dp"
        app:icon="@drawable/ic_payment"
        app:iconGravity="textStart" />

    <TextView
        android:id="@+id/txtPaymentStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/status_paid"
        android:gravity="center"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#388E3C"
        android:background="#E8F5E9"
        android:padding="16dp"
        android:layout_gravity="bottom"
        android:visibility="gone" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>