<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:background="?attr/colorPrimary">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:titleTextColor="@android:color/white" />
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:padding="16dp">

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/buttonPay"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- 1. RECEIPT TITLE (Mapping to 'title' Intent Extra) -->
                <TextView
                    android:id="@+id/txtReceiptTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:text="@string/bill"
                    android:layout_marginBottom="12dp"
                    tools:text="Tên hóa đơn sẽ hiển thị ở đây" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp" >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.25"
                        android:text="Mã đơn:"
                        android:textColor="@android:color/black"
                        android:textSize="18sp"/>
                    <TextView
                        android:id="@+id/txtReceiptID"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.75"
                        android:textColor="@android:color/black"
                        android:textSize="18sp"
                        tools:text="ORD123456" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp" >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.25"
                        android:text="Ngày tạo:"
                        android:textColor="@android:color/black"
                        android:textSize="18sp"/>
                    <TextView
                        android:id="@+id/txtReceiptDate"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.75"
                        android:textColor="@android:color/black"
                        android:textSize="18sp"
                        tools:text="15/11/2025" />
                </LinearLayout>

                <!-- Phản hồi của quản trị viên -->
                <LinearLayout
                    android:id="@+id/layoutBillInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:background="@drawable/bg_admin_reply"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:id="@+id/txtBillInfoTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thông tin thanh toán"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:textColor="@android:color/black"
                        android:layout_marginBottom="8dp" />

                    <!-- MANDATORY BILL DISPLAY (VISIBLE BY DEFAULT, HIDDEN FOR VOLUNTARY) -->
                    <LinearLayout
                        android:id="@+id/layoutMandatoryPrice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.44"
                            android:text="Số tiền thanh toán:"
                            android:textSize="16sp"
                            android:textColor="@android:color/black"/>

                        <TextView
                            android:id="@+id/txtBillInfoAmount"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.56"
                            android:textAlignment="viewEnd"
                            android:textColor="@android:color/holo_red_dark"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            tools:text="50,000 đ" />
                    </LinearLayout>

                    <!-- VOLUNTARY BILL INPUT (HIDDEN BY DEFAULT, SHOWN FOR VOLUNTARY) -->
                    <LinearLayout
                        android:id="@+id/layoutVoluntaryInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Số tiền đóng góp:"
                            android:textSize="16sp"
                            android:textColor="@android:color/black"
                            android:layout_marginBottom="4dp"/>

                        <EditText
                            android:id="@+id/editVoluntaryAmount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="numberDecimal"
                            android:hint="Nhập số tiền muốn đóng góp (VND)"
                            android:textSize="18sp"
                            android:padding="8dp"
                            android:background="@android:color/transparent"
                            android:drawablePadding="8dp"
                            android:minHeight="48dp"
                            android:drawableEnd="@android:drawable/ic_menu_edit"
                            android:textColor="@android:color/holo_blue_dark"
                            android:textStyle="bold"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.44"
                            android:text="Nội dung thanh toán:"
                            android:textSize="16sp"
                            android:textColor="@android:color/black"/>

                        <TextView
                            android:id="@+id/txtBillInfoDetail"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.56"
                            android:textAlignment="viewEnd"
                            android:textColor="@android:color/black"
                            android:textSize="16sp"
                            tools:text="Phí dịch vụ hàng tháng" />
                    </LinearLayout>

                </LinearLayout>

                <!-- Thay thế Spinner bằng AutoCompleteTextView để có thể tìm kiếm -->

            </LinearLayout>
        </ScrollView>

        <Button
            android:id="@+id/buttonPay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/go_to_pay_page"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:backgroundTint="?attr/colorPrimary"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="16dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>