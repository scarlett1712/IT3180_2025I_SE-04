<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F7FA"> <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingHorizontal="16dp"
    android:paddingTop="16dp"
    android:paddingBottom="40dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chi tiết Phản hồi"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="8dp"/>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp"
        app:cardBackgroundColor="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/feedback_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Thang máy bị kẹt ở tầng 5"
                android:textSize="18sp"
                android:textColor="#333333"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/feedback_sender_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                tools:text="Gửi bởi Phòng 501 | 10/12, 10:30 AM"
                android:textSize="12sp"
                android:textColor="#757575" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#EEEEEE"
                android:layout_marginVertical="12dp"/>

            <TextView
                android:id="@+id/feedback_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#333333"
                android:textSize="14sp"
                android:lineSpacingExtra="4dp"
                tools:text="Sự cố xảy ra lúc 9h sáng, thang máy rung lắc mạnh và ngừng hoạt động. Cần kỹ thuật viên kiểm tra ngay."/>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nội dung Trả lời của Ban Quản Trị"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"/>

    <EditText
        android:id="@+id/edt_reply_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="Nhập câu trả lời của bạn..."
        android:inputType="textMultiLine"
        android:minLines="5"
        android:gravity="top"
        android:background="@drawable/bg_input_rounded_border"
        android:padding="12dp"
        android:layout_marginBottom="20dp"
        android:layout_marginHorizontal="8dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_send_reply"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="16dp"
        android:text="Gửi trả lời"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:backgroundTint="?attr/colorPrimary"
        app:cornerRadius="12dp"
        android:layout_marginHorizontal="8dp"
        app:icon="@drawable/ic_send"
        app:iconGravity="textStart"
        app:iconTint="@color/white"/>

</LinearLayout>
</androidx.core.widget.NestedScrollView>