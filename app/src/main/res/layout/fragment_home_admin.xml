<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Phần chào -->
        <TextView
            android:id="@+id/txtWelcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/welcome"
            android:textSize="24sp"
            android:textColor="@android:color/black"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/txtGreeting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/greeting"
            android:textSize="20sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginBottom="20dp"/>

        <!-- Tiêu đề Tiện ích -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/utilities"
            android:textStyle="bold"
            android:textSize="24sp"
            android:layout_marginBottom="8dp"
            android:textColor="@android:color/black"/>

        <!-- Scroll ngang -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="0dp">

                <!-- Nút 1: Thông báo -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginEnd="36dp">

                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:background="@drawable/bg_circle_blue"
                        android:src="@drawable/ic_notification_light"
                        android:contentDescription="@string/notifications"
                        android:scaleType="fitXY"
                        android:padding="16dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/notifications"
                        android:textSize="16sp"
                        android:gravity="center"/>
                </LinearLayout>

                <!-- Nút 2: Hóa đơn -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginEnd="36dp">

                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:background="@drawable/bg_circle_blue"
                        android:src="@drawable/ic_home"
                        android:contentDescription="@string/bill"
                        android:scaleType="fitXY"
                        android:padding="16dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/bill"
                        android:textSize="16sp"
                        android:gravity="center"/>
                </LinearLayout>

                <!-- Nút 4: Phản hồi -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginEnd="36dp">

                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:background="@drawable/bg_circle_blue"
                        android:src="@drawable/ic_feedback_light"
                        android:contentDescription="@string/feedback"
                        android:scaleType="fitXY"
                        android:padding="16dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/feedback"
                        android:textSize="16sp"
                        android:gravity="center"/>
                </LinearLayout>

                <!-- Nút 5: Cài đặt -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginEnd="36dp">

                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:background="@drawable/bg_circle_blue"
                        android:src="@drawable/ic_feedback_light"
                        android:contentDescription="@string/settings"
                        android:scaleType="fitXY"
                        android:padding="16dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/settings"
                        android:textSize="16sp"
                        android:gravity="center"/>
                </LinearLayout>

                <!-- Nút 6: Hỗ trợ -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginEnd="36dp">

                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:background="@drawable/bg_circle_blue"
                        android:src="@drawable/ic_account"
                        android:contentDescription="@string/support"
                        android:scaleType="fitXY"
                        android:adjustViewBounds="true"
                        android:padding="16dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/support"
                        android:textSize="16sp"
                        android:gravity="center"/>
                </LinearLayout>

                <!-- Thêm các nút khác ở đây -->
            </LinearLayout>
        </HorizontalScrollView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/notification_manager"
            android:textStyle="bold"
            android:textSize="24sp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:textColor="@android:color/black"/>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/recyclerNotifications"
            android:background="@android:color/white"
            android:layout_weight="1"
            android:scrollbars="vertical" />
    </LinearLayout>
</LinearLayout>
