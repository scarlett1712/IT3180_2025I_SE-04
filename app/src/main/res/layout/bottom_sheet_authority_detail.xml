<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_bottomsheet_top_rounded"
    android:paddingBottom="24dp">

    <View
        android:layout_width="40dp"
        android:layout_height="4dp"
        android:background="#E0E0E0"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="20dp"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardPriority"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#E3F2FD"
                app:cardCornerRadius="6dp"
                app:cardElevation="0dp"
                app:strokeWidth="0dp"
                android:layout_marginBottom="12dp">
                <TextView
                    android:id="@+id/txtPriority"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="6dp"
                    android:text="Normal"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="#1976D2"/>
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/txtDetailTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tiêu đề thông báo"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#1F2937"
                android:layout_marginBottom="8dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_account"
                    app:tint="#6B7280"/>

                <TextView
                    android:id="@+id/txtSender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Công an phường"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:textColor="#374151"
                    android:layout_marginStart="6dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" • "
                    android:textColor="#9CA3AF"
                    android:layout_marginHorizontal="4dp"/>

                <TextView
                    android:id="@+id/txtDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12/12/2025"
                    android:textSize="13sp"
                    android:textColor="#6B7280"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#F3F4F6"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:id="@+id/txtDetailContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nội dung chi tiết..."
                android:textSize="15sp"
                android:textColor="#374151"
                android:lineSpacingExtra="5dp"
                android:layout_marginBottom="24dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAttachment"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Xem tài liệu đính kèm"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                app:icon="@drawable/ic_link"
                app:iconGravity="textStart"
                app:backgroundTint="?attr/colorPrimary"
                app:cornerRadius="12dp"
                android:layout_marginBottom="12dp"
                android:visibility="gone"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnClose"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Đóng"
                android:textColor="#6B7280"
                app:cornerRadius="12dp"
                app:strokeColor="#D1D5DB"
                app:strokeWidth="1dp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>